    <style>

    body{
        background: linear-gradient(3deg, #e6d16c, #16014c);
    }

    a:hover,a:focus{
     outline: none;
     text-decoration: none;
    }
    .tab{
     background: #200122;
     background: -webkit-linear-gradient(to bottom, #6f0000, #200122);
     background: linear-gradient(to bottom, #6f0000, #200122);
     /* padding: 40px 50px; */
